<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:focusableInTouchMode="true"
    tools:context=".ui.activity.GitRepositoryListActivity">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewRepository"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/round_corner_ring_gray_border"
        app:iconifiedByDefault="false"
        app:queryHint="@string/hint_repo_search_view" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleViewRepository"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchViewRepository"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/textViewNoData"
        style="@style/DefaultTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchViewRepository"
        android:layout_margin="8dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="20dp"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBarLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>
