<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="gitRepository"
            type="com.git.trending.data.model.GitRepository" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="12dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textViewProjectName"
                    style="@style/DefaultTextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{gitRepository.name}" />

                <TextView
                    android:id="@+id/textViewProjectStarCount"
                    style="@style/DefaultTextDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@{ String.valueOf(gitRepository.starCount).concat(gitRepository.starCount > 1 ?` Stars`:` Star`)}"
                    android:viewVisibility="@{gitRepository.starCount>0}"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textViewProjectDescription"
                    style="@style/DefaultTexLightDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@{gitRepository.description}"
                    android:viewVisibility="@{gitRepository.description!=null&amp;&amp;gitRepository.description.length()>0}"
                    android:visibility="gone" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>